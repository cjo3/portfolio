- const gaUrl = `https://www.googletagmanager.com/gtag/js?id=${gaTag}`

doctype html
html(lang="en")
  head
    title=title
    meta(charset="UTF-8")
    meta(name="viewport", content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="icon" type="image/x-icon" href=faviconHref)
    style !{appStyle}
  body
    #app !{appMarkup}
each bundle in bundles
  script(src=bundle defer)
script window.__PRELOADED_STATE__ = !{JSON.stringify(appState)}
script(src=gaUrl defer)
script window.dataLayer = window.dataLayer || [] function gtag(){dataLayer.push(arguments)} gtag('js', new Date()) gtag('config', '#{gaTag}')