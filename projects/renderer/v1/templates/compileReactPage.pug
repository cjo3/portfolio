doctype html
html(lang="en")
  head
    title=title
    meta(charset="UTF-8")
    meta(name="viewport", content="minimum-scale=1, initial-scale=1, width=device-width, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    link(rel="icon" type="image/x-icon" href=faviconHref)
    style !{appStyle}
  body
    #app !{appMarkup}
    include noScript.pug
script window.__PRELOADED_STATE__ = !{JSON.stringify(appState)}
each bundle in bundles
  script(src=bundle defer)
